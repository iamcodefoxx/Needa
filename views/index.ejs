        <div class="message-container flex-5"></div>
        <button id="closeToast">&times;</button>
      </div>
    </div>
  </section>

  <header id="homeHeader">
    <div class="container">
      <div class="subcontainer">
        <nav>
          <div class="navbar">
            <a href="/" class="nav-branding">
              <h1>Needa</h1>
            </a>
            <ul class="nav-menu">
              <% if (typeof user !="undefined" && user) { %>
                <li class="nav-item">
                  <div class="dropdown" data-dropdown>
                    <div class="user-icon link" data-dropdown-button>
                      <% if(typeof user.profile_photo !="undefined" && user.profile_photo) { %>
                        <style>
                          .user-icon {
                            background-image: url("http://localhost:5000/profile-photo/<%= user.id%>/<%= user.profile_photo %>");
                          }
                        </style>
                      <% } else { %>
                        <i class="fas fa-user link" data-dropdown-button></i>
                      <% } %>
                    </div>
                    <div class="dropdown-menu">
                      <a href="/profile">
                        <div class="dropdown-links top-link">
                          <div class="user-icon" data-dropdown-button>
                            <% if(typeof user.profile_photo !="undefined" && user.profile_photo) { %>
                              <style>
                                .user-icon {
                                  background-image: url("http://localhost:5000/profile-photo/<%= user.id%>/<%= user.profile_photo %>");
                                }
                              </style>
                            <% } else { %>
                              <i class="fas fa-user link" data-dropdown-button></i>
                            <% } %>
                          </div>
                          <h3>
                            <%= user.first_name %>
                            <%= user.last_name%>
                          </h3>
                        </div>
                      </a>
                      <a href="/">
                        <div class="dropdown-links">
                          <i class="fas fa-home"></i>
                          <h3>Home</h3>
                        </div>
                      </a>
                      <a href="/profile">
                        <div class="dropdown-links">
                          <i class="fas fa-user-circle"></i>
                          <h3>My Profile</h3>
                        </div>
                      </a>
                      <a href="/settings">
                        <div class="dropdown-links">
                          <i class="fa-solid fa-gear"></i>
                          <h3>Settings</h3>
                        </div>
                      </a>
                      <% if (typeof user !="undefined" && user.admin==="Yes" ) { %>
                        <a href="/admin">
                          <div class="dropdown-links">
                            <i class="fa-solid fa-unlock"></i>
                            <h3>Admin</h3>
                          </div>
                        </a>
                      <% } %>
                      <a href="/auth/logout">
                        <div class="dropdown-links bottom-link">
                          <i class="fas fa-sign-out"></i>
                          <h3>Logout</h3>
                        </div>
                      </a>
                    </div>
                  </div>
                </li>
                <% } else { %>
                  <li class="nav-item">
                    <a href="/login" class="nav-link">Log in</a>
                  </li>
                  <li class="nav-item">
                    <a href="/register" class="nav-link"><button style="padding: 8px 12px 8px 12px;font-size: 1rem;"
                        id="register-user-btn">Register</button></a>
                  </li>
                <% } %>
            </ul>
            <div class="hamburger">
              <span class="bar"></span>
              <span class="bar"></span>
              <span class="bar"></span>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </header>

  <section id="carousel" class="fade">
    <div class="container">
      <div class="subcontainer">
        <div class="carousel-header flex-column-gap-15">
          <div class="carousel-header-box-1 flex-column-gap-10">
            <h1>Needa connects you with working professionals in your area.</h1>
            <p>Need someone to build you a fence? Mow your lawn? Cut your hair? DJ at your party? Or maybe someone to walk your
