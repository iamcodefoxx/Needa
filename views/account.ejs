<%- include("partials/header.ejs") %>
<%- include("partials/location-modal.ejs") %>

  <section id="accountSection">
    <div class="container">
      <div class="subcontainer">
        <div class="account-wrapper">
          <div class="account-col-1">
            <div class="account-col-1-child-1">
              <h2>Settings</h2>
            </div>
            <div class="account-col-1-child-2">
              <a href="/settings">
                <div class="account-col-1-link flex-row-gap-10">
                  <i class="fas fa-user-circle"></i>
                  <p>PROFILE</p>
                </div>
              </a>
              <a href="/settings/showcase">
                <div class="account-col-1-link flex-row-gap-10">
                  <i class="fa-solid fa-cloud-arrow-up"></i>
                  <p>SHOWCASE PHOTOS</p>
                </div>
              </a>
              <a href="/settings/account" style="color:#7449F5;">
                <div class="account-col-1-link flex-row-gap-10" style="background-color: #f1f1f1;">
                  <i class="fas fa-cog"></i>
                  <p>ACCOUNT</p>
                </div>
              </a>
            </div>
          </div>
          <div class="account-col-2">
            <div class="account-col-2-child flex-column-gap-15">
              <h2>Delete account</h2>
              <p>Are you absolutely sure you want to delete your needa.com account? <span style="font-weight: 600;">Please note your personal data will be deleted permanently when you delete your account and there is no option to
              restore the account or its data.</span> If you click the button, you will be asked to confirm this action by entering your password.
              </p>
              <div>
                <button id="delete-account-modal-btn">Delete my account</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="overlay">
    <div class="delete-account-modal">
      <div class="delete-account-modal-contents flex-column-gap-20">
        <div class="form-title">
          <h1>Are you sure?</h1>
        </div>
        <p>Please enter your password to delete your account.</p>        
        <input type="text" placeholder="Password">
        <button>Delete</button>
        <i class="fa-solid fa-xmark" id="close-login-modal-btn"></i>
      </div>
    </div>
  </div>

  <script src="/js/script.js"></script>
  <script src="/js/delete-modal.js"></script>
  <% if (typeof user !="undefined" && user) { %>
    <script src="/js/google-map.js"></script>
  <% } %>

<%- include("partials/footer.ejs") %>